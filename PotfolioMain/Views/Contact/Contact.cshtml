@model dynamic

@{
    ViewBag.Title = "Contact";
    Layout = "_Layout";
}

<body class="text">
<div class="container-fluid">
    <div class="row center">
        <div class="contactBigText">
            CONTACT ME
        </div>
        
        <hr class="contacts">
        
        <div class="contactText col-lg-6 col-lg-offset-3">
            It is a long established fact that a reader will be distracted 
            by the readable content of a page when looking at its layout.
        </div>
    </div>
    
    <div class="row center">
        
        <form class="center blockOfInput" asp-controller="Contact" asp-action="Send">
            <input type="text" class="contact col-lg-6 col-lg-offset-3 contact col-sm-8 col-sm-offset-2 col-x12" placeholder="Your Name">
            <input type="text" class="contact col-lg-6 col-lg-offset-3 contact col-sm-8 col-sm-offset-2 col-x12" placeholder="Your Mail">
            <input type="text" class="contact col-lg-6 col-lg-offset-3 contact col-sm-8 col-sm-offset-2 col-x12" placeholder="Subject">
            <textarea type="text" class="contact col-lg-6 col-lg-offset-3 contact col-sm-8 col-sm-offset-2 col-x12" placeholder="Your Massage">
                        </textarea>
            <button type="submit" class=" contact col-lg-2 col-lg-offset-5">Send Massage</button>
        </form>
    </div>
</div>

</body>

